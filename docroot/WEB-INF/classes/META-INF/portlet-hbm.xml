<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" auto-import="false">
	<import class="org.politaktiv.map.infrastructure.model.DbMapObject" />
	<import class="org.politaktiv.map.infrastructure.model.DbMarker" />
	<import class="org.politaktiv.map.infrastructure.model.DbPicture" />
	<import class="org.politaktiv.map.infrastructure.model.DbPoint" />
	<class name="org.politaktiv.map.infrastructure.model.impl.DbMapObjectImpl" table="politaktivmap_DbMapObject">
		<cache usage="read-write" />
		<id name="mapObjectId" type="long">
			<generator class="assigned" />
		</id>
		<property name="companyId" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="groupId" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="userId" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="name" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="description" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="referenceUrl" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="occupancy" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="mapId" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="type" type="com.liferay.portal.dao.orm.hibernate.StringType" column="type_" />
		<property name="graphicObjectId" type="com.liferay.portal.dao.orm.hibernate.LongType" />
	</class>
	<class name="org.politaktiv.map.infrastructure.model.impl.DbMarkerImpl" table="politaktivmap_DbMarker">
		<cache usage="read-write" />
		<id name="markerId" type="long">
			<generator class="assigned" />
		</id>
		<property name="markerImageName" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="pointId" type="com.liferay.portal.dao.orm.hibernate.LongType" />
	</class>
	<class name="org.politaktiv.map.infrastructure.model.impl.DbPictureImpl" table="politaktivmap_DbPicture">
		<cache usage="read-write" />
		<id name="pictureId" type="long">
			<generator class="assigned" />
		</id>
		<property name="rotation" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="width" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="height" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="resolution" type="com.liferay.portal.dao.orm.hibernate.DoubleType" />
		<property name="pointId" type="com.liferay.portal.dao.orm.hibernate.LongType" />
	</class>
	<class name="org.politaktiv.map.infrastructure.model.impl.DbPointImpl" table="politaktivmap_DbPoint">
		<cache usage="read-write" />
		<id name="pointId" type="long">
			<generator class="assigned" />
		</id>
		<property name="longitude" type="com.liferay.portal.dao.orm.hibernate.DoubleType" />
		<property name="latitude" type="com.liferay.portal.dao.orm.hibernate.DoubleType" />
	</class>
</hibernate-mapping>