<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.1.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_0_0.dtd">
<service-builder package-path="org.politaktiv.map.infrastructure">
	<author>eichi</author>
	<namespace>politaktivmap</namespace>

	<entity name="DbMapObject" local-service="true" remote-service="true">
		<!-- fields -->
		<column name="mapObjectId" type="long" primary="true" />
		<column name="companyId" type="long" />	
		<column name="groupId" type="long" />
		<column name="userId" type="long" />
		<column name="name" type="String" />
		<column name="description" type="String" />
		<column name="referenceUrl" type="String" />
		<column name="occupancy" type="long" />
		<column name="mapId" type="long" />
		<column name="type" type="String" />
		<column name="graphicObjectId" type="long" />
		
		<finder name="companyIdAndgroupId" return-type="Collection">
			<finder-column name="companyId" />
			<finder-column name="groupId" />
		</finder> 
	</entity>
	
	<entity name="DbPicture" local-service="true" remote-service="true">
		<column name="pictureId" type="long" primary="true" />
		<column name="rotation" type="long" />
		<column name="width" type="long" />
		<column name="height" type="long" />
		<column name="resolution" type="double" />
		
		<!--references-->
		<column name="pointId" type="long" />
	
		<finder name="pictureId" return-type="Picture">
			<finder-column name="pictureId" />
		</finder>
	</entity>
	
	<entity name="DbMarker" local-service="true" remote-service="true">
		<column name="markerId" type="long" primary="true" />
		<column name="markerImageName" type="String" />
		<!--references-->
		<column name="pointId" type="long" />
		
		<finder name="markerId" return-type="Marker">
			<finder-column name="markerId" />
		</finder> 	
	</entity>
	
	<entity name="DbPoint" local-service="true" remote-service="true">
		<column name="pointId" type="long" primary="true" />
		<column name="longitude" type="double" />
		<column name="latitude" type="double" />
		
		<finder name="pointId" return-type="Point">
			<finder-column name="pointId" />
		</finder> 
	</entity>
	

</service-builder>
